= render 'shared/nav'
.contents
  .user
    .user-name
      -if user_signed_in?
        = current_user.name

  .blogs
    - @blogs.each do |blog|
      .col.s12
        .card.indigo.darken-3
          .card-content.white-text
            %span.card-title
              = blog.title
          .card-action
            =link_to 'Show blog', blog_path(blog.id), method: :get
            - if user_signed_in?
              =link_to 'Edit blog', edit_blog_path(blog.id)
              =link_to 'Delete blog', blog_path(blog.id), method: :delete


