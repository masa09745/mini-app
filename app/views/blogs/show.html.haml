= render 'shared/nav'
.blog
  .blog-title
    %h6 Title
    = @blog.title
  .blog-content
    %h6 本文
    .blog-content__image
      = image_tag @blog.image.url unless @blog.image.blank?
    .blog-content__text
      = @blog.content

.comments
  .comments-box
    %p コメント
  .comments_area
    = render partial: 'comments/list', locals: { comment: @comment}
.comment-form
  - if user_signed_in?
    = render partial: 'comments/form', locals: { comment: @comment}
