.row
  .col.s12
    = form_for @blog do |f|
      .row
        .input-field.col.s12
          %h5 タイトル
          =f.text_field :title, class: 'textfield'
      .content
        %h5 本文
        =f.text_area :content, class: 'blog-content'
      = f.submit 'Send', class: 'waves-effect waves-light btn-large indigo darken-3'